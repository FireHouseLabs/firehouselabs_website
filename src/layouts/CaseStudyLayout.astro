---
import Layout from './Layout.astro';

interface Props {
  frontmatter: {
    title: string;
    client: string;
    industry: string;
    tool: string;
    platform: string;
    challenge: string;
    impact: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.challenge}>
  <article class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex flex-col gap-16">
        <!-- Header -->
        <header class="flex flex-col gap-8 sm:gap-10">
          <div class="flex flex-col gap-4 sm:gap-6">
            <h1 class="text-4xl font-medium tracking-tight sm:text-5xl lg:text-6xl">
              {frontmatter.title}
            </h1>
          </div>
          <!-- Project Details -->
          <dl class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
            <div class="rounded-3xl bg-primary-500/10 dark:bg-primary-400/10 px-6 py-8">
              <dt class="text-sm font-medium">Client</dt>
              <dd class="mt-2 text-2xl font-medium">{frontmatter.client}</dd>
            </div>
            <div class="rounded-3xl bg-primary-500/10 dark:bg-primary-400/10 px-6 py-8">
              <dt class="text-sm font-medium">Industry</dt>
              <dd class="mt-2 text-2xl font-medium">{frontmatter.industry}</dd>
            </div>
            <div class="rounded-3xl bg-primary-500/10 dark:bg-primary-400/10 px-6 py-8">
              <dt class="text-sm font-medium">Platform</dt>
              <dd class="mt-2 text-2xl font-medium">{frontmatter.platform}</dd>
            </div>
            <div class="rounded-3xl bg-primary-500/10 dark:bg-primary-400/10 px-6 py-8">
              <dt class="text-sm font-medium">Solution</dt>
              <dd class="mt-2 text-2xl font-medium">{frontmatter.tool}</dd>
            </div>
          </dl>
        </header>

        <!-- Content -->
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <slot />
        </div>

        <!-- CTA -->
        <div class="flex justify-center">
          <a
            href="/contact"
            @click="gtag('event', 'contact_button_click', { 'button_location': 'case_study_layout', 'button_text': 'Discuss Your Project' })"
            class="bg-primary-600 hover:bg-primary-700 focus-visible:outline-primary-600 inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
          >
            Discuss Your Project
          </a>
        </div>
      </div>
    </div>
  </article>
</Layout>
